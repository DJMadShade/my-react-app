{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "lib": ["dom", "es2015", "es2016", "es2017"],
      "sourceMap": true,
      "jsx": "react",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "strict": true,
      "moduleResolution": "node",
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "allowSyntheticDefaultImports": true
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*"]
  }
  